{
    "name": "alex-linter",
    "version": "0.6.1",
    "displayName": "AlexJS Linter",
    "description": "Find gender favouring, race related, religion inconsiderate or other unequal phrasing",
    "publisher": "tlahmann",
    "contributors": [
        {
            "name": "shinnn",
            "url": "https://github.com/shinnn/"
        }
    ],
    "repository": "https://github.com/tlahmann/vscode-alex",
    "homepage": "https://github.com/tlahmann/vscode-alex#readme",
    "bugs": "https://github.com/tlahmann/vscode-alex/issues",
    "license": "MIT",
    "icon": "media/icon.png",
    "galleryBanner": {
        "color": "#FAFAFA",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.47.0"
    },
    "activationEvents": [
        "onLanguage:plaintext",
        "onLanguage:markdown",
        "onLanguage:latex"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "AlexJS Linter",
            "properties": {
                "alexLinter.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Control whether AlexJS Linter automatically check files or not."
                },
                "alexLinter.strategy": {
                    "type": "string",
                    "default": "onType",
                    "enum": [
                        "onType",
                        "onSave"
                    ],
                    "enumDescriptions": [
                        "Check the document while typing",
                        "Check the document when saving"
                    ]
                },
                "alexLinter.binary": {
                    "type": "boolean",
                    "default": true,
                    "description": "Control whether AlexJS Linter warns for pairs like he and she and garbageman or garbagewoman."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd server && npm install && cd ../client && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.1",
        "@types/node": "^14.0",
        "@types/vscode": "^1.47",
        "eslint": "^7.0.0",
        "is-md": "^2.0.0",
        "typescript": "^3.9"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    }
}
