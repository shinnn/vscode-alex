{
    "name": "alex-linter",
    "version": "0.6.1",
    "displayName": "AlexJS Linter",
    "description": "Find gender favouring, race related, religion inconsiderate or other unequal phrasing",
    "publisher": "tlahmann",
    "contributors": [
        {
            "name": "shinnn",
            "url": "https://github.com/shinnn/"
        }
    ],
    "repository": "https://github.com/tlahmann/vscode-alex",
    "homepage": "https://github.com/tlahmann/vscode-alex#readme",
    "bugs": "https://github.com/tlahmann/vscode-alex/issues",
    "license": "MIT",
    "icon": "media/icon.png",
    "galleryBanner": {
        "color": "#FAFAFA",
        "theme": "light"
    },
    "engines": {
        "vscode": "^1.47.0"
    },
    "activationEvents": [
        "onLanguage:plaintext",
        "onLanguage:markdown",
        "onLanguage:latex",
        "onCommand:alexLinter.lint"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "AlexJS Linter",
            "properties": {
                "alexLinter.strategy": {
                    "type": "string",
                    "default": "onType",
                    "description": "Sets when the Alex linter checks for inconsiderate writing",
                    "enum": [
                        "onType",
                        "onSave",
                        "user"
                    ],
                    "enumDescriptions": [
                        "Check the document while typing",
                        "Check the document when saving",
                        "Check the document on user initiation"
                    ]
                },
                "alexLinter.alex.noBinary": {
                    "type": "boolean",
                    "default": false,
                    "description": "Control whether AlexJS Linter warns for pairs like 'he or she'."
                },
                "alexLinter.alex.profanitySureness": {
                    "type": "string",
                    "default": "maybe",
                    "description": "The profanitySureness field is the minimum rating (including) that you want to check for. If you set it to 1 (maybe) then it will warn for level 1 and 2 (likely) profanities, but not for level 0 (unlikely).",
                    "enum": [
                        "likely",
                        "maybe",
                        "unlikely"
                    ],
                    "enumDescriptions": [
                        "Words that are likely profanity and seldom used in text",
                        "Words that are maybe profanity and somewhat used in text",
                        "Words that are unlikely profanity and often used in text"
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "alexLinter.lint",
                "title": "AlexLiner: Check for insensitive, inconsiderate writing"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd server && npm install && cd ../client && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.0.1",
        "@types/node": "^14.0",
        "@types/vscode": "^1.47",
        "eslint": "^7.0.0",
        "is-md": "^2.0.0",
        "typescript": "^3.9"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    }
}
